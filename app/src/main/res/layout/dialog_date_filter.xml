<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter by Date Range"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <RadioGroup
        android:id="@+id/radioGroupDateFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioAllTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Time"
            android:textSize="16sp"
            android:padding="12dp"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioToday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textSize="16sp"
            android:padding="12dp"/>

        <RadioButton
            android:id="@+id/radioThisWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This Week"
            android:textSize="16sp"
            android:padding="12dp"/>

        <RadioButton
            android:id="@+id/radioThisMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This Month"
            android:textSize="16sp"
            android:padding="12dp"/>

        <RadioButton
            android:id="@+id/radioLastMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Month"
            android:textSize="16sp"
            android:padding="12dp"/>

        <RadioButton
            android:id="@+id/radioCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom Range"
            android:textSize="16sp"
            android:padding="12dp"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnCancelDateFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton"/>

        <Button
            android:id="@+id/btnApplyDateFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Apply"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</LinearLayout>